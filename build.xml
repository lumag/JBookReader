<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project [<!ENTITY buildfile SYSTEM "file:./build-user.xml">]>
<project basedir="." default="build" name="JBookReader">
    <!-- Loads global properties for this build -->
    <property file="build.properties"/>

    <path id="project.classpath">
        <pathelement location="bin"/>
    </path>
    <path id="tests.classpath">
    	<path refid="project.classpath"/>
        <pathelement location="bin-tests"/>
        <pathelement location="bin-misc"/>
        <pathelement location="${JUNIT_HOME}/junit.jar"/>
    </path>

    <target name="init">
        <mkdir dir="bin"/>
        <mkdir dir="bin-misc"/>
        <mkdir dir="bin-tests"/>
	<mkdir dir="tests/temp"/>
    </target>
    <target name="clean">
        <delete dir="bin"/>
        <delete dir="bin-misc"/>
        <delete dir="bin-tests"/>
    </target>
    <target depends="init" name="build">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac destdir="bin">
            <src path="src-model"/>
        </javac>
	<javac destdir="bin">
            <src path="src-parser"/>
        </javac>
	<javac destdir="bin">
            <src path="src-painter"/>
        </javac>
	<javac destdir="bin">
            <src path="src-swingui"/>
        </javac>
	<copy todir="bin">
	    <fileset dir="src-swingui" includes="**/*.properties" />
	</copy>
        <javac destdir="bin-misc">
            <src path="src-misc"/>
            <src path="src-ui"/>
            <classpath refid="project.classpath"/>
        </javac>
        <javac destdir="bin-tests">
            <src path="src-tests"/>
            <classpath refid="tests.classpath"/>
        </javac>
    </target>
    <target name="Main" depends="build">
        <java classname="org.jbookreader.ui.swing.Main" failonerror="true" fork="yes">
            <classpath refid="project.classpath"/>
        </java>
    </target>
    <target name="TextUI" depends="build">
        <java classname="org.jbookreader.ui.text.TextUI" failonerror="true" fork="yes">
            <classpath refid="tests.classpath"/>
        </java>
    </target>
    <target name="AllTest" depends="build">
        <junit fork="yes" printsummary="withOutAndErr">
            <formatter type="plain"/>
            <test name="org.jbookreader.AllTest"/>
            <classpath refid="tests.classpath"/>
        </junit>
    </target>
    <target name="jar" depends="AllTest">
	<jar destfile="jbookreader-${project.version}.jar" basedir="bin">
	    <manifest>
	    	<attribute name="Sealed" value="true" />
		<attribute name="Main-Class" value="org.jbookreader.ui.swing.Main" />
	    </manifest>
	</jar>
    </target>
    <target name="srczip" >
    	<zip destfile="jbookreader-${project.version}-src.zip" >
	    <zipfileset prefix="jbookreader-${project.version}" dir="." includes="src-model/**,src-parser/**,src-painter/**,src-swingui/**"/>
	    <zipfileset prefix="jbookreader-${project.version}" dir="." includes="src-misc/**,src-ui/**"/>
	    <zipfileset prefix="jbookreader-${project.version}" dir="." includes="src-tests/**"/>
	    <zipfileset prefix="jbookreader-${project.version}" dir="." includes="tests/**" excludes="tests/temp/**"/>
	    <zipfileset prefix="jbookreader-${project.version}" dir="." includes="build.*"/>
	</zip>
    </target>
    <target name="help">
    	<echo message="Please run: $ ant -v -projecthelp"/>
    </target>
</project>
